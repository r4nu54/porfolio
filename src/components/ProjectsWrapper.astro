---
import ProjectCard from '@/components/ProjectCard.astro'
import type { IProjects } from '@/types'

const { projects, title, id } = Astro.props as IProjects
---

<section
  id={id}
  class='my-20 scroll-mt-60 sm:scroll-mt-24'>
  <h2 class='my-6 w-80'>
    {title}
  </h2>
  <div class='grid grid-cols-1 gap-10 md:grid-cols-2'>
    {projects.map(project => <ProjectCard projectDetail={project} />)}
  </div>
</section>
