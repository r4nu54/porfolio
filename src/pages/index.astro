---
import '@/styles/style.css'
import { info } from '@/data/info'
import Experience from '@/components/Experience.astro'
import Hero from '@/components/Hero.astro'
import Layout from '@/layouts/Layout.astro'
import ProjectsWrapper from '@/components/ProjectsWrapper.astro'
import SocialBar from '@/components/SocialBar.astro'
---

<Layout>
  <Hero
    name={info.name}
    about={info.about}
    id='top'
  />
  <Experience
    title={'EXPERIENCIA'}
    details={info.experience}
    id='experiencia'
  />
  <Experience
    title={'EDUCACIÓN'}
    details={info.education}
    id='educacion'
  />
  <ProjectsWrapper
    title={'PROYECTOS (En construcción)'}
    projects={info.projects}
    id='proyectos'
  />
  <SocialBar
    title={'CONTACTO Y REDES'}
    id='contacto'
  />
</Layout>
